pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('nodejs:latest','./NodeJsApp')
                }
            }
        }
        stage('Debug') {
            steps {
                script {
                   dir('/var/lib/jenkins/workspace/Docker-ECS') {
                    sh 'ls -R'
         }
      }
   }
}

        stage('Run Unit Tests') {
            agent {
                docker {
                    // Use an image that has Node.js installed
                    image 'nodejs:latest'
                    args '-w /var/lib/jenkins/workspace/Docker-ECS -v /var/lib/jenkins/workspace/Docker-ECS:/var/lib/jenkins/workspace/Docker-ECS -v /var/lib/jenkins/workspace/Docker-ECS@tmp:/var/lib/jenkins/workspace/Docker-ECS@tmp'
                }
            }
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/Docker-ECS') {
                    sh 'npm test'
                    }
                }
            }
        }
    }
}
