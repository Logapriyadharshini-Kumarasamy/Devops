pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from the NodeJsApp directory
                    docker.build('nodejs:latest', './NodeJsApp')
                }
            }
        }

        stage('Debug') {
            steps {
                script {
                    // Print the directory structure for debugging
                    dir('./NodeJsApp') {
                        sh 'ls -R'
                    }
                }
            }
        }

        stage('Run Unit Tests') {
            agent {
                docker {
                    image 'nodejs:latest'
                    args '-w /app -v /var/lib/jenkins/workspace/Docker-ECS:/app'
                }
            }
            steps {
                script {
                    // Run npm test inside the Docker container
                    sh 'npm test'
                }
            }
        }
    }
}
