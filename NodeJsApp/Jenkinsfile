pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from the NodeJsApp directory
                    docker.build('nodeapp1:latest', './NodeJsApp')
                }
            }
        }

        stage('Debug') {
            steps {
                script {
                    // Print the directory structure for debugging
                    dir('/var/lib/jenkins/workspace/Docker-ECS/NodeJsApp') {
                        sh 'ls -R'
                    }
                }
            }
        }

        stage('Run Unit Tests') {
            agent {
                docker {
                    image 'nodeapp1:latest'
                    args '-u root -w /var/lib/jenkins/workspace/Docker-ECS/NodeJsApp -v /var/lib/jenkins/workspace/Docker-ECS/NodeJsApp'
                }
            }
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/Docker-ECS/NodeJsApp') {
                        sh 'ls -la'
                        sh 'npm test --loglevel=verbose '          // Run tests
                    }
                }
            }
        }
    }
}
