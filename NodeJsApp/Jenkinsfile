pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('nodejs:tag','./NodeJsApp')
                }
            }
        }
        stage('Run Unit Tests') {
             steps {
                script {
                   docker.image('nodejs:tag','./NodeJsApp').inside {
                   sh 'npm test'
            }
        }
    }
}

    }
}
