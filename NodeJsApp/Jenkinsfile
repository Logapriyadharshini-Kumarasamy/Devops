pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from the NodeJsApp directory
                    docker.build('nodeapp1:latest', './NodeJsApp')
                }
            }
        }

        stage('Debug') {
            steps {
                script {
                    // Print the directory structure for debugging
                    dir('/var/lib/jenkins/workspace/Docker-ECS') {
                          sh 'ls -R'
                     }
                }
            }
        }

        stage('Run Unit Tests') {
            agent {
                docker {
                    image 'nodeapp1:latest'
                    args  '-u root -w /usr/src/app/NodeJsApp -v /var/lib/jenkins/workspace/Docker-ECS:/usr/src/app/NodeJsApp'

                }
            }
            steps {
                script {
                    // Run npm test inside the Docker container
                   dir('/usr/src/app/NodeJsApp') { 
                    sh 'npm test'
                   }
                }
            }
        }
    }
}
