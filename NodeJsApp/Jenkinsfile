pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from the NodeJsApp directory
                    docker.build('nodeapp:latest', './NodeJsApp')
                }
            }
        }

        stage('Debug') {
            steps {
                script {
                    // Print the directory structure for debugging
                    dir('/var/lib/jenkins/workspace/Docker-ECS') {
                          sh 'ls -R'
                     }
                }
            }
        }

        stage('Run Unit Tests') {
            agent {
                docker {
                    image 'nodeapp:latest'
                    args '-w /var/jenkins_home -v /var/jenkins_home:/var/jenkins_home'
                }
            }
            steps {
                script {
                    // Run npm test inside the Docker container
                   dir('./NodeJsApp') { 
                    sh 'npm test'
                   }
                }
            }
        }
    }
}
