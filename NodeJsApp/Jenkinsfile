pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from the NodeJsApp directory
                    docker.build('nodeapp1:latest', './NodeJsApp')
                }
            }
        }

        
        stage('Run Unit Tests') {
            agent {
                docker {
                    image 'nodeapp1:latest'
                    args '-u root'
                }
            }

            steps {
                script {
                    dir('/usr/src/app'){
                        sh 'id'
                        sh 'ls -la /usr/src/app/NodeJsApp'
                        sh 'npm test /usr/src/app'          // Run tests
                    }                }
            }
        }
    }
}
