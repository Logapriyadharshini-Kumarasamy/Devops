pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('nodejs:latest', './NodeJsApp')
                }
            }
        }

        stage('Debug') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/Docker-ECS') {
                        sh 'ls -R'
                    }
                }
            }
        }

        stage('Run Unit Tests') {
            agent {
                docker {
                    image 'nodejs:latest'
                    args '-w /var/jenkins_home -v /var/jenkins_home:/var/jenkins_home'
                }
            }
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/Docker-ECS') {
                        sh 'npm test'
                    }
                }
            }
        }
    }
}
